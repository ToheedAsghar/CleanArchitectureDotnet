 @model Core.Entities.Customer

<form asp-action="AddCustomer" asp-controller="Customer" method="post">
    <div class="mb-2">
        <label asp-for="Id" class="form-label">Id:</label>
        <input asp-for="Id" class="form-control" type="number" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Name" class="form-label">Name:</label>
        <input asp-for="Name" class="form-control" type="text" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-2">
        <label asp-for="Description" class="form-label">Description:</label>
        <input asp-for="Description" class="form-control" type="text" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>

<a asp-action="Index" asp-controller="Customer" class="btn btn-outline-primary mt-3">Return to Customer Home Page</a>